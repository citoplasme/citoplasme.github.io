---
export interface Props {
	title: string;
	href: string;
	status: string;
  date: string;
  description: string;
  keywords: string;
}
const { href, title, status, date, description, keywords } = Astro.props as Props;
---
<div class="timeline__item">
  <div class="timeline__item__notes">
    <div class="timeline__item__keywords">
      { keywords }
    </div>
    <div class="timeline__item__subtitle">
      <div>{ date } | { status }</div>
    </div>
  </div>
  <div class="timeline__item__title">
    <a href={href}>{ title }</a>
  </div>
  <div class="timeline__item__body" set:html={description}/>
</div>
<style>
	.timeline__item {
    border-left: 2px solid var(--second-color);
    padding-left: var(--mb-6);
    position: relative;
    text-align: left;
    padding-bottom: var(--mb-1);
  }
  @media screen and (max-width: 480px) {
    .timeline__item {
      padding-left: var(--mb-2);
    }
  }
  .timeline__item:before {
    position: absolute;
    content: "";
    top: 7px;
    left: -8px;
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: var(--sixth-color);
    border: 2px solid var(--second-color);
  }
  .timeline__item:not(:last-child) {
    padding-bottom: var(--mb-4);
  }
  .timeline__item__title {
    font-size: var(--h3-font-size);
    font-weight: bold;
    color: var(--third-color);
    margin-bottom: var(--mb-1);
    clear: both;
  }
  .timeline__item__body {
    font-size: var(--normal-font-size);
  }
  .timeline__item__subtitle {
    color: var(--fifth-color);
    text-align: right;
    display: inline-block;
    flex-grow: 1;
  }
  .timeline__item__keywords {
    color: var(--third-color);
    text-transform: uppercase;
    word-spacing: 0.5rem;
    display: inline-block;
    width: fit-content;
  }
  .timeline__item__notes {
    font-size: var(--smaller-font-size);
    display: flex;
    padding-top: var(--mb-0);
    margin-bottom: var(--mb-0);
  }
</style>
