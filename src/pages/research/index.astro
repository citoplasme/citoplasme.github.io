---
import Layout from '../../layouts/research/list.astro';
import Card from '../../components/card.astro';
const researchs = await Astro.glob('./*.md');
---
<Layout title="Research">
  {researchs.map(research => 
    <Card href={research.url} title={research.frontmatter.title} subtitle={research.frontmatter.status} body={research.frontmatter.description}/>
  )}
</Layout>
